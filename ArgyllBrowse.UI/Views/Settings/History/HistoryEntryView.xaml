<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="ArgyllBrowse.UI.Views.Settings.History.HistoryEntryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ArgyllBrowse.UI.Views.Settings.History"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Time" Grid.Column="0" />


        <HyperlinkButton Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <ImageIcon x:Name="Favicon" />
                <TextBlock x:Name="DocumentTitle" />
                <TextBlock x:Name="Host" />
            </StackPanel>

        </HyperlinkButton>
    </Grid>
</UserControl>
