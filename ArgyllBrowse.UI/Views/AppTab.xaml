<?xml version="1.0" encoding="utf-8" ?>
<local:ReactiveAppTab
    x:Class="ArgyllBrowse.UI.Views.AppTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ArgyllBrowse.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="using:ReactiveUI"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Padding="8" ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="GoBackBtn"
                Padding="8"
                IsEnabled="{x:Bind MyWebView.CanGoBack, Mode=OneWay}">
                <FontIcon FontSize="16" Glyph="&#xE72B;" />
            </Button>
            <Button
                x:Name="GoForwardBtn"
                Grid.Column="1"
                Padding="8"
                IsEnabled="{x:Bind MyWebView.CanGoForward, Mode=OneWay}">
                <FontIcon FontSize="16" Glyph="&#xE72A;" />
            </Button>
            <Button
                x:Name="RefreshBtn"
                Grid.Column="2"
                Padding="8">
                <FontIcon FontSize="16" Glyph="&#xE777;" />
            </Button>
            <Button
                x:Name="StopBtn"
                Grid.Column="2"
                Padding="8">
                <FontIcon FontSize="16" Glyph="&#xE711;" />
            </Button>
            <TextBox
                x:Name="SearchBar"
                Grid.Column="3"
                CornerRadius="16"
                IsSpellCheckEnabled="False" />
        </Grid>

        <WebView2
            x:Name="MyWebView"
            Grid.Row="1"
            DefaultBackgroundColor="{StaticResource SolidBackgroundFillColorTertiary}">
            <WebView2.KeyboardAccelerators>
                <KeyboardAccelerator Key="F12" Invoked="OpenDevToolsWindow_Invoked" />
            </WebView2.KeyboardAccelerators>
        </WebView2>
    </Grid>


</local:ReactiveAppTab>
