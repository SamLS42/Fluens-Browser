<?xml version="1.0" encoding="utf-8" ?>
<local:ReactiveAppTab
    x:Class="Fluens.UI.Views.AppTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fluens.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="using:ReactiveUI"
    xmlns:settings="using:Fluens.UI.Views.Settings"
    mc:Ignorable="d">

    <local:ReactiveAppTab.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BorderBrush" Value="{ThemeResource CircleElevationBorderBrush}" />
        </Style>
        <Style TargetType="ToggleButton">
            <Setter Property="Padding" Value="8" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BorderBrush" Value="{ThemeResource CircleElevationBorderBrush}" />
        </Style>
        <Style TargetType="FontIcon">
            <Setter Property="FontSize" Value="16" />
        </Style>
    </local:ReactiveAppTab.Resources>

    <Grid>
        <Grid Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid
                Padding="8"
                BorderBrush="{ThemeResource CircleElevationBorderBrush}"
                BorderThickness="0,0,0,1"
                ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button x:Name="GoBackBtn" IsEnabled="{x:Bind WebView.CanGoBack, Mode=OneWay}">
                    <FontIcon Glyph="&#xE72B;" />
                </Button>
                <Button
                    x:Name="GoForwardBtn"
                    Grid.Column="1"
                    IsEnabled="{x:Bind WebView.CanGoForward, Mode=OneWay}">
                    <FontIcon Glyph="&#xE72A;" />
                </Button>
                <Button
                    x:Name="RefreshBtn"
                    Grid.Column="2"
                    Padding="8">
                    <FontIcon Glyph="&#xE777;" />
                </Button>
                <Button x:Name="StopBtn" Grid.Column="2">
                    <FontIcon Glyph="&#xE711;" />
                </Button>
                <TextBox
                    x:Name="SearchBar"
                    Grid.Column="3"
                    BorderBrush="{ThemeResource CircleElevationBorderBrush}"
                    CornerRadius="16"
                    IsSpellCheckEnabled="False" />
                <ToggleButton x:Name="ConfigBtn" Grid.Column="4">
                    <FontIcon Glyph="&#xE713;" />
                </ToggleButton>
            </Grid>

            <WebView2
                x:Name="WebView"
                Grid.Row="1"
                DefaultBackgroundColor="{StaticResource SolidBackgroundFillColorTertiary}" />

        </Grid>
        <Popup
            x:Name="SettingsPopup"
            Grid.Row="1"
            IsLightDismissEnabled="True"
            LightDismissOverlayMode="On">
            <Border
                x:Name="SettingsDialogContent"
                Margin="64"
                BorderBrush="{StaticResource ContentDialogBorderThemeBrush}"
                BorderThickness="{StaticResource ContentDialogBorderWidth}"
                CornerRadius="{StaticResource OverlayCornerRadius}">
                <settings:SettingsView x:Name="SettingsView" />
            </Border>
        </Popup>
    </Grid>



</local:ReactiveAppTab>
