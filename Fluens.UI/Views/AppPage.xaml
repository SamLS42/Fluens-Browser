<?xml version="1.0" encoding="utf-8" ?>
<local:ReactiveAppPage
    x:Class="Fluens.UI.Views.AppPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fluens.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="using:Fluens.UI.Views.Settings"
    xmlns:viewmodels="using:Fluens.AppCore.ViewModels"
    mc:Ignorable="d">

    <local:ReactiveAppPage.Resources>
        <DataTemplate x:Key="TabViewItemTemplate" x:DataType="viewmodels:AppTabViewModel">
            <TabViewItem Header="{x:Bind DocumentTitle, Mode=OneWay, Converter={StaticResource StringToTabHeaderConverter}}" IconSource="{x:Bind FaviconUrl, Mode=OneWay, Converter={StaticResource StringToIconSourceConverter}}">
                <TabViewItem.Content>
                    <local:AppTabContent ViewModel="{x:Bind}" />
                </TabViewItem.Content>
            </TabViewItem>
        </DataTemplate>
    </local:ReactiveAppPage.Resources>

    <TabView
        x:Name="tabView"
        VerticalAlignment="Stretch"
        Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
        TabItemTemplate="{StaticResource TabViewItemTemplate}">
        <TabView.TabStripHeader>
            <Grid x:Name="ShellTitleBarInset" Background="Transparent" />
        </TabView.TabStripHeader>
        <TabView.TabStripFooter>
            <Grid
                x:Name="CustomDragRegion"
                MinWidth="188"
                Background="Transparent" />
        </TabView.TabStripFooter>
        <TabView.KeyboardAccelerators>
            <KeyboardAccelerator
                Key="W"
                Invoked="KeyboardAccelerator_Invoked"
                Modifiers="Control" />
            <KeyboardAccelerator
                Key="T"
                Invoked="KeyboardAccelerator_Invoked"
                Modifiers="Control" />
            <KeyboardAccelerator Key="F5" Invoked="KeyboardAccelerator_Invoked" />
            <KeyboardAccelerator
                Key="T"
                Invoked="KeyboardAccelerator_Invoked"
                Modifiers="Control,Shift" />
        </TabView.KeyboardAccelerators>
    </TabView>

</local:ReactiveAppPage>
