<?xml version="1.0" encoding="utf-8" ?>
<local:ReactiveAppTab
    x:Class="Fluens.UI.Views.AppTabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Fluens.UI.Helpers"
    xmlns:local="using:Fluens.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="using:ReactiveUI"
    xmlns:settings="using:Fluens.UI.Views.Settings"
    mc:Ignorable="d">

    <local:ReactiveAppTab.Resources>
        <Style
            x:Key="SubtleToggleButtonStyle"
            BasedOn="{StaticResource DefaultToggleButtonStyle}"
            TargetType="ToggleButton">
            <Setter Property="Background" Value="{ThemeResource SubtleButtonBackground}" />
            <Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
            <Setter Property="Foreground" Value="{ThemeResource SubtleButtonForeground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource SubtleButtonBorderBrush}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
            <Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
            <Setter Property="FocusVisualMargin" Value="-3" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style TargetType="ToggleButton" />
        <Style TargetType="FontIcon">
            <Setter Property="FontSize" Value="16" />
        </Style>
    </local:ReactiveAppTab.Resources>

    <Grid>
        <Grid Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid
                Padding="8"
                BorderBrush="{ThemeResource CircleElevationBorderBrush}"
                BorderThickness="0,0,0,1"
                ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="GoBackBtn"
                    IsEnabled="{x:Bind WebView.CanGoBack, Mode=OneWay}"
                    Style="{ThemeResource SubtleButtonStyle}">
                    <FontIcon Glyph="&#xE72B;" />
                </Button>
                <Button
                    x:Name="GoForwardBtn"
                    Grid.Column="1"
                    IsEnabled="{x:Bind WebView.CanGoForward, Mode=OneWay}"
                    Style="{ThemeResource SubtleButtonStyle}">
                    <FontIcon Glyph="&#xE72A;" />
                </Button>
                <Button
                    x:Name="RefreshBtn"
                    Grid.Column="2"
                    Padding="8"
                    Style="{ThemeResource SubtleButtonStyle}">
                    <FontIcon Glyph="&#xE777;" />
                </Button>
                <Button
                    x:Name="StopBtn"
                    Grid.Column="2"
                    Style="{ThemeResource SubtleButtonStyle}">
                    <FontIcon Glyph="&#xE711;" />
                </Button>
                <AutoSuggestBox
                    x:Name="SearchBar"
                    Grid.Column="3"
                    BorderBrush="{ThemeResource CircleElevationBorderBrush}" />
                <ToggleButton
                    x:Name="ConfigBtn"
                    Grid.Column="4"
                    Style="{StaticResource SubtleToggleButtonStyle}">
                    <FontIcon Glyph="&#xE713;" />
                </ToggleButton>
            </Grid>

            <WebView2
                x:Name="WebView"
                Grid.Row="1"
                DefaultBackgroundColor="{StaticResource SolidBackgroundFillColorTertiary}" />

            <Popup
                x:Name="SettingsPopup"
                Grid.Row="1"
                IsLightDismissEnabled="False"
                LightDismissOverlayMode="On">
                <Border x:Name="SettingsDialogContent">
                    <settings:SettingsView x:Name="SettingsView" />
                </Border>
            </Popup>
        </Grid>
    </Grid>

</local:ReactiveAppTab>