<?xml version="1.0" encoding="utf-8" ?>
<local:ReactiveHistoryEntryView
    x:Class="Fluens.UI.Views.Settings.History.HistoryEntryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Fluens.UI.Views.Settings.History"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="Time"
            Grid.Column="0"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <HyperlinkButton x:Name="HyperlinkBtn">
                <StackPanel Orientation="Horizontal">
                    <ImageIcon x:Name="Favicon" Width="16" />
                    <TextBlock x:Name="DocumentTitle" TextWrapping="NoWrap" />
                </StackPanel>
            </HyperlinkButton>
            <TextBlock
                x:Name="Host"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
        </Grid>
    </Grid>
</local:ReactiveHistoryEntryView>
